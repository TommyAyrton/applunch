<p id="notice"><%= notice %></p>

<div class="container">
  <h2>Entradas</h2>
  <p>Lista de los platos de entrada:</p>

  <br>
  
  <%= link_to 'Agregar plato de entrada', new_entrada_path, class:'btn btn-primary btn-block' %>
 
  <br>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Imagen</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% contador = 0 %>

      <% @entradas.each do |entrada| %>
        <tr>
          <td><%= entrada.nombre %></td>
          <td><%= entrada.descripcion %></td>
          <td><%= image_tag(entrada.imagen.medium.url, alt:'imagen') %></td>        
          <% if entrada.estado == 1 %>
            <td>Activo</td>
            <% contador = contador + 1 %>
          <% else %>
            <td>Inactivo</td>
          <% end %>        
          <td><%= link_to 'Show', entrada %></td>
          <td><%= link_to 'Edit', edit_entrada_path(entrada) %></td>
          <td><%= link_to 'Destroy', entrada, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p>Platos activos: <%= contador %></p>

    <% if contador > 2 %>

      <script>
        $(document).ready(function(){
        $("#myModal").modal("show");
        });
      </script> 
        
    <% end %>

</div>