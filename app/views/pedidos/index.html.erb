<p id="notice"><%= notice %></p>

<h1>Pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Entrada</th>
      <th>Fondo</th>
      <th>Bebida</th>
      <th>Empleado</th>
      <th>Mesa</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.entrada_id %></td>
        <td><%= pedido.fondo_id %></td>
        <td><%= pedido.bebida_id %></td>
        <td><%= pedido.empleado_id %></td>
        <td><%= pedido.mesa_id %></td>
        <td><%= pedido.estado %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

