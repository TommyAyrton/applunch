            </ul>

            <div class="tab-content text-left">

              <!-- Seccion Platos de entrada -->
              <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel" aria-labelledby="pills-breakfast-tab">
                <div class="row">

                <% @entradas.each do |entrada| %>
                  
                  <% if entrada.estado ==1 %>

                    <div class="col-md-6 site-animate">
                      <div class="media menu-item">
                        <%= image_tag(entrada.imagen.thumb.url, alt:'imagen', class:'img-fluid') %>
                        <div class="media-body">
                          <h5 class="mt-0"><%= entrada.nombre %></h5>
                          <p><%= entrada.descripcion %></p>
                          <h6 class="text-primary menu-price"><%= entrada.id %></h6>
                          <%= button_to "AÃ±adir Entrada", pedidos_new_path, :id => entrada %>
                        </div>
                      </div>
                    </div>   
                    
                  <% end %>                  
                                  
                <% end %>               
                                

                </div>
              </div>

              <!-- Seccion Platos de fondo -->
              <div class="tab-pane fade" id="pills-lunch" role="tabpanel" aria-labelledby="pills-lunch-tab">
                <div class="row">
                
                <% @fondos.each do |fondo| %>
                  
                  <% if fondo.estado ==1 %>

                    <div class="col-md-6 site-animate">
                      <div class="media menu-item">                      
                      <%= image_tag(fondo.imagen.thumb.url, alt:'imagen') %>  
                        <div class="media-body">
                          <h5 class="mt-0"><%= fondo.nombre %></h5>
                          <p><%= fondo.descripcion %></p>
                          <h6 class="text-primary menu-price"><%= fondo.id %></h6>
                        </div>
                      </div>
                    </div>
                    
                  <% end %>                 

                    
                <% end %> 

                </div>
              </div>

              <!-- Seccion Platos bebidas -->
              <div class="tab-pane fade" id="pills-dinner" role="tabpanel" aria-labelledby="pills-dinner-tab">
                <div class="row">

                <% @bebidas.each do |bebida| %>
                  
                  <% if bebida.estado == 1 %>

                    <div class="col-md-6 site-animate">
                      <div class="media menu-item">                      
                      <%= image_tag(bebida.imagen.thumb.url, alt:'imagen') %>  
                        <div class="media-body">
                          <h5 class="mt-0"><%= bebida.nombre %></h5>
                          <p><%= bebida.descripcion %></p>
                          <h6 class="text-primary menu-price"><%= bebida.id %></h6>
                        </div>
                      </div>
                    </div>
                    
                  <% end %>
 
                <% end %> 

                </div>
