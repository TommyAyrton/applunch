<p id="notice"><%= notice %></p>

<div class="container">

  <h2>Bebidas</h2>
  <p>Lista de las bebidas:</p>

  <br>
  
  <%= link_to 'Agregar bebida', new_bebida_path, class:'btn btn-primary btn-block' %>  

  <br>  

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripcion</th>
          <th>Imagen</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>        
        <% contador = 0 %>
        
          <% @bebidas.each do |bebida| %>
            <tr>
              <td><%= bebida.nombre %></td>
              <td><%= bebida.descripcion %></td>
              <td><%= image_tag(bebida.imagen.medium.url, alt:'imagen') %></td>
              
              <% if bebida.estado == 1 %>
                <td>Activo</td>
                <% contador = contador + 1 %>
                <% else %>
                <td>Inactivo</td>         
              <% end %>       
              
              <td><%= link_to 'Show', bebida %></td>
              <td><%= link_to 'Edit', edit_bebida_path(bebida) %></td>
              <td><%= link_to 'Destroy', bebida, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>

      </tbody>
    </table>
    <p></p>
    <p>Bebidas activas: <%= contador %></p>
    
    <% if contador > 1 %>

      <script>
        $(document).ready(function(){
        $("#myModal").modal("show");
        });
      </script>         
        
    <% end %>      

</div>
