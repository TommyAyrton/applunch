<p id="notice"><%= notice %></p>

<ul class="list-group">
  <li class="list-group-item">
    <p>
      <strong>Nombre:</strong>
      <%= @bebida.nombre %>
    </p>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Descripcion:</strong>
      <%= @bebida.descripcion %>
    </p>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Imagen:</strong>
      <%= image_tag(@bebida.imagen.thumb.url, alt:'imagen') %>
    </p>
  </li>
  <li class="list-group-item">
    <p>
      <strong>Estado:</strong>
        <% if @bebida.estado == 1 %>
          Activo
          <% else %>
          Inactivo
        <% end %>            
    </p>
  </li>
</ul>

